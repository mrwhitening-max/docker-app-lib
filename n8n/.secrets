# ============================================
# N8N CONFIGURATION
# ============================================

# PostgreSQL Passwort
# Generieren mit: openssl rand -base64 32
POSTGRES_PASSWORD=

# n8n Port
N8N_PORT=5678

# n8n Service Name in Consul
N8N_SERVICE_NAME=n8n

# Health Check Endpoint
N8N_HEALTH_PATH=/healthz

# PostgreSQL Port
POSTGRES_PORT=5432

# PostgreSQL Service Name in Consul
POSTGRES_SERVICE_NAME=n8n-postgres

# ============================================
# CONSUL CONFIGURATION
# ============================================

# Version des Consul Docker Images
CONSUL_VERSION=1.22.3

# IP-Adresse des Consul Servers
# Beispiel: 192.168.2.20
CONSUL_SERVER_IP=

# Eindeutiger Name dieses Consul Nodes
CONSUL_NODE_NAME=lxc-n8n

# Datacenter Name (identisch auf allen Nodes)
CONSUL_DATACENTER=homelab

# Log-Level
# Optionen: TRACE, DEBUG, INFO, WARN, ERROR
CONSUL_LOG_LEVEL=INFO