# ============================================
# REACTIVE RESUME CONFIGURATION
# ============================================

# ============================================
# APP CONFIGURATION
# ============================================

# Oeffentliche URL der App (IP oder Domain des Proxmox-Hosts)
APP_URL=

# Interne URL der App fuer den Printer-Service
# WICHTIG: Muss auf localhost zeigen da wir network_mode: host verwenden
PRINTER_APP_URL=http://localhost:3000

# ============================================
# AUTHENTICATION
# ============================================

# Geheimer Schluessel fuer JWT-Token Signierung
# Generieren mit: openssl rand -base64 32
AUTH_SECRET=

# ============================================
# PRINTER / BROWSERLESS CONFIGURATION
# ============================================

# Token fuer die Browserless Chrome API
# Generieren mit: openssl rand -hex 16
BROWSERLESS_TOKEN=

# Port fuer Browserless (3001 um Konflikt mit App auf 3000 zu vermeiden)
BROWSERLESS_PORT=3001

# ============================================
# DATABASE CONFIGURATION
# ============================================

POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Port (falls abweichend vom Standard)
POSTGRES_PORT=5432

# ============================================
# STORAGE CONFIGURATION (SeaweedFS / S3)
# ============================================

S3_ACCESS_KEY=seaweedfs
S3_SECRET_KEY=seaweedfs
S3_BUCKET=reactive-resume

# Oeffentliche URL des SeaweedFS S3-Endpoints (fuer Browser-Downloads)
S3_URL=

# ============================================
# CONSUL CONFIGURATION
# ============================================

# Consul Server IP
CONSUL_SERVER_IP=

# Eindeutiger Node Name fuer diesen LXC
CONSUL_NODE_NAME=lxc-reactive-resume

# Datacenter Name (identisch auf allen Nodes)
CONSUL_DATACENTER=homelab

# Log Level
CONSUL_LOG_LEVEL=INFO

# Netzwerk-Interface
NETWORK_INTERFACE=eth0

# Service Namen
APP_SERVICE_NAME=reactive-resume
POSTGRES_SERVICE_NAME=reactive-resume-postgres

# App Port
APP_PORT=3000